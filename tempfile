#include <iostream>
#include <string>
#include <vector>
#include <iomanip>
using namespace std;
#ifndef LAB1_H
#define LAB1_H



class Lab1 {
    Lab1() {
       string title;
        string col1;
        string col2;
        cout << "Enter a title for the data:" << endl;
        getline(cin, title);
        cout << "You entered: " << title << endl;
        cout << "Enter the column 1 header:" << endl;
        getline(cin, col1);
        cout << "You entered: " << col1 << endl;
        cout << "Enter the column 2 header:" << endl;
        getline(cin, col2);
        cout << "You entered: " << col2 << endl;
        vector<string> dataPoints;
        vector<int> dataInts;
        while (true) {
            cout << "Enter a data point (-1 to stop input):" << endl;
            string input;
            getline(cin, input);
            bool error = false;
            if (input == "-1") {
                break;
            }
            int commanum = 0;
            //Counting commas
            for (int i = 0; i < input.length(); i++ ) {
              if (input[i] == ',') {
                commanum++;
              }
            }
            if (commanum == 0) {
                cout << "Error: No comma in string." << endl;
            }
            else if (commanum > 1) {
                cout << "Error: Too many commas in input." << endl;
            }
            else if (commanum == 1) {
            int amount;
            int commaplacement = input.find(",");
            try {
                amount = stoi(input.substr(commaplacement + 1, input.length()));
            } catch(invalid_argument& arg) {
                cout << "Error: Comma not followed by an integer." << endl;
                error = true;
            }
            if (!error) {
                string name = input.substr(0, commaplacement);
                dataPoints.push_back(name);
                dataInts.push_back(amount);
                cout << "Data string: " << name << endl;
                cout << "Data integer: " << amount << endl;
            }
            }
        }
        cout << endl;
        cout << right << setw(33) << title << endl;
        cout << left << setw(20) << col1 << "|";
        cout << right << setw(23) << col2 << endl;
        cout << "--------------------------------------------" << endl;
        for (int i = 0; i < dataPoints.size(); i++) {
            cout << left << setw(20) << dataPoints[i] << "|";
            cout << right << setw(23) << dataInts[i] << endl;
        }
        cout << endl;
        //histogram
        for (int i = 0; i < dataInts.size(); i++) {
            string star = "";
            for (int j = 0; j < dataInts[i]; j++) {
                star += "*";
            }
            cout << right << setw(20) << dataPoints[i] << " " << star << endl;;
        }
    }
};



#endif //LAB1_H
